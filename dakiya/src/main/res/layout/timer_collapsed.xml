<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/notification_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tool:text="Large notification, showing a title and a body." />

    <Chronometer
        android:id="@+id/notification_timer"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/notification_subtitle"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:format="hh:mm:ss"
        android:maxLines="1" />

    <TextView
        android:id="@+id/notification_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/notification_timer"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        tool:text="Large notification, showing a title and a body." />
</RelativeLayout>